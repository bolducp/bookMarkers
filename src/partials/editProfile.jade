link(rel="stylesheet", href="/css/profile.css")
.container
  h1 Editing Your Profile!
  br
  label Current Image:
  img(ng-src="{{user.imageUrl}}", alt="Image not found.")
  p Username: {{user.username}}
  p E-Mail: {{user.email}}
  br
  br
  form(ng-submit="updateProfile()")
    .form-group
      label Image URL:
      input(type="text", ng-model="user.imageUrl").form-control
    .form-group
      label Location (zip code):
      input(type="number", ng-model="user.location", min="501", max="99999").form-control
    .form-group
      label About: 
      input(type="text", ng-model="user.blurb").form-control
    
    .form-group
      label Favorite Books: 
      input(type="text", value="{{user.favoriteBooks}}", ng-model="user.favoriteBooks").form-control
    .form-group
      label Disliked Books: 
      input(type="text", value="{{user.dislikedBooks}}", ng-model="user.dislikedBooks").form-control
      
    button.btn.btn-success Save Changes
    button(ui-sref="profile").btn.btn-danger Cancel
