link(rel="stylesheet", href="/css/login.css")
.col-xs-offset-2.col-xs-8
  h1.text-center Login
    br
   form(ng-submit="login()")#loginForm
     .form-group
       label(for='email') Email address:
       input#email.form-control(ng-model="email", type='email', placeholder='Email', required)
     .form-group
       label(for='password') Password:
       input#password.password.form-control(ng-model="password", type='password', placeholder='Password', required)
     button.btn.btn-success.btn-lg Login
